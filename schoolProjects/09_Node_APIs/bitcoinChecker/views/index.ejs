<%- include(`./partials/header.ejs`) %>

<div class="container text-center mt-3">
    <h1>BitCoin Price App</h1>
</div>
<div class="container text-center">
    <form action="/result" method="GET">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="currencies" id="USD" value="USD">
            <label class="form-check-label" for="USD">
                USD
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="currencies" id="GBP" value="GBP">
            <label class="form-check-label" for="GBP">
                GBP
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="currencies" id="EUR" value="EUR">
            <label class="form-check-label" for="EUR">
                EUR
            </label>
        </div>
        <br><button type="submit" class="btn btn-primary border-white mt-3 px-5 py-3 rounded-pill">Get Price</button>
    </form>
</div>
<div class="container text-center">
    <h1>The current price is:</h1>
    <h1 class="display-2"><%- `${symbol} ${value}` %> </h1>
    <h4><a href="https://www.coindesk.com/price/bitcoin">Powered By CoinDesk</a></h4>
</div>

<%- include(`./partials/footer.ejs`) %>